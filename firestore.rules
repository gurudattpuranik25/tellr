rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Personal expenses ──────────────────────────────────────────────────────
    // Only the owner can read/write their own expenses
    match /users/{userId}/expenses/{expenseId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── User profiles ──────────────────────────────────────────────────────────
    // Any signed-in user can read profiles (needed for email lookup when adding group members)
    // Only the owner can write their own profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ── User settings (budgets, preferences) ───────────────────────────────────
    // Only the owner can read/write their own settings
    match /users/{userId}/settings/{doc} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── Groups ─────────────────────────────────────────────────────────────────
    // Any signed-in user can create a group
    // Only members (uid in memberUids) can read or update an existing group
    match /groups/{groupId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null
                          && request.auth.uid in resource.data.memberUids;
      allow delete: if request.auth != null
                    && request.auth.uid in resource.data.memberUids;

      // Group expenses — members only
      match /expenses/{expenseId} {
        allow read, write: if request.auth != null
                           && request.auth.uid in get(
                                /databases/$(database)/documents/groups/$(groupId)
                              ).data.memberUids;
      }

      // Group settlements — members only
      match /settlements/{settlementId} {
        allow read, write: if request.auth != null
                           && request.auth.uid in get(
                                /databases/$(database)/documents/groups/$(groupId)
                              ).data.memberUids;
      }
    }
  }
}
